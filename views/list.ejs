<%- include('header') -%>
<div class="box" id="heading">
    <h1><%= title %> </h1>
</div>
<div class="box">
    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Enter New Item Here" autocomplete="off" />
        <button type="submit" name="button" value=<%= title %>>+</button>
    </form>
    <% for(var i in allItems) {%>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="deleteItem" value="<%=allItems[i]._id%>" onchange="this.form.submit()">

            <p contentEditable="true"><b> <%=allItems[i].name%> </b></p>
        </div>
        <input type="hidden" name="listName" value="<%=title%>" /> 
    </form>
    <% } %>

</div>
<%- include('footer') -%>